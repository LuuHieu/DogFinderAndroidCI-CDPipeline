<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".doglisting.MainActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivDog"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="42dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@id/btNext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher"

        />


    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btPrevious"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="36dp"
        android:background="@drawable/bg_circle_solid_white"
        android:backgroundTint="@color/color_1a237e"
        android:elevation="4dp"
        android:padding="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_arrow_left"
        app:layout_constraintBottom_toBottomOf="@id/btNext"
        app:layout_constraintEnd_toStartOf="@id/btNext" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btNext"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/bg_circle_solid_white"
        android:backgroundTint="@color/color_1a237e"
        android:elevation="4dp"
        android:padding="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_arrow_right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>